@model DSTrucking.Models.JobApplicationViewModel

@{
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<div class="container job-application-wrapper-table margin-bottom-40">
    <div class="row margin-top-160">
        <div class="col-xs-4"></div>
        <div class="col-xs-5">
            <div class="row row-reset">
                <div class="col-xs-12 col-reset">
                    <h3 class="f-center">Are you sure you want to delete this Candidate?</h3>
                </div>
            </div>
            <div class="row row-reset row-eq-height">
                <div class="col-xs-4 col-reset border-left border-top">
                    <div class="padding-all-13 break-word">
                        @Html.DisplayNameFor(model => model.CDLInformation.CDLNumber)
                    </div>
                </div>
                <div class="col-xs-4 col-reset border-left border-top">
                    <div class="padding-all-13 break-word">
                        @Html.DisplayNameFor(model => model.User.FirstName)
                    </div>
                </div>
            </div>
            <div class="row row-reset row-eq-height">
                <div class="col-xs-4 col-reset border-bottom border-left border-top">
                    <div class="padding-all-13 break-word">
                        @Html.DisplayFor(model => model.CDLInformation.CDLNumber)
                    </div>
                </div>
                <div class="col-xs-4 col-reset border-bottom border-left border-top">
                    <div class="padding-all-13 break-word">
                        @Html.DisplayFor(model => model.User.FirstName)
                    </div>
                </div>
            </div>
            <div class="row row-reset margin-top-20">
                <div class="col-xs-12">
                    @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()
                
                        <div class="wpcf7 driver-app-form clearfix driver-details-button margin-bottom-20">
                                <input type="submit" value="Delete" class="wpcf7-submit f-left" />
                                @Html.ActionLink("Back to List", "Index")
                        </div>                       
                    }
                </div>
            </div>
        </div>
        <div class="col-xs-3"></div>
    </div>
</div>